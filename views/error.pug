extends base

block navbar
    nav.navbar.navbar-default.navbar-fixed-top.topnav(role='navigation')
        .container.topnav
            .navbar-header
                a.navbar-brand.topnav(href='/')
                    img(src='/public/img/banner.png')


block content
    link(href='../public/css/index.css', rel='stylesheet')
    .content-section-a
        .container
            row
                .col-lg-5.col-sm-6
                    #app
                        hr.section-heading-spacer
                        .clearfix
                        h2.section-heading
                            | Something went wrong!
                        p
                            | {{message}}
                        p
                            | {{error}}
                        p.lead
                            | Please contact support at support@walkinexpress.ca


    script(src='/socket.io/socket.io.js')
    script(src='../public/external/vue.js')
    script(src='/public/external/moment.js')
    script(src='/public/js/error.js')